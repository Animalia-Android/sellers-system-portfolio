---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Doug Sellers — Portfolio">
  <section style="padding:32px 0;">
    <h1 style="font-size:clamp(28px,3.8vw,44px);margin:0 0 .4rem;">Doug Sellers</h1>
    <p style="max-width:60ch;color:var(--muted)">Software Engineer — React, TypeScript, Node. Building fast, human-centered interfaces and reliable systems.</p>
    <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(140px,1fr));gap:10px;margin-top:14px">
      <a class="tile" href="/experience">Professional Experience</a>
      <a class="tile" href="/projects">Personal Projects</a>
      <a class="tile" href="/apps">Small Apps</a>
      <a class="tile" href="/stack">Tech I Use</a>
      <a class="tile" href="/about">About</a>
      <a class="tile" href="/contact">Contact</a>
    </div>
  </section>
  <style>
    .tile{padding:.7rem .9rem;border:1px solid var(--border);border-radius:12px;background:var(--card);display:flex;align-items:center;justify-content:center}
    @media (hover:hover){ .tile:hover{transform:translateY(-1px)} }
  </style>
</BaseLayout>
